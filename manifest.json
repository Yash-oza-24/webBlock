{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "2.0",
  "description": "Block distracting websites",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://your-auth-server.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://your-auth-server.com"
  },
  "action": {
    "default_popup": "welcome.html",
    "default_title": "Website Blocker"
  },
  "background": {
    "service_worker": "rules.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": []
  },
  "icons": {
    "128": "icon.png"
  }
}
